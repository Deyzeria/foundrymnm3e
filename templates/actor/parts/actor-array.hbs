<section>
<ol class="items-list">
    <li class="item flexrow items-header">
        <div class="item-name">Name</div>
        <div class="item-action">Action</div>
        <div class="item-rank">Rank</div>
        <div class="item-cost">Cost</div>
        <div class="item-active">Active</div>
        <div class="item-controls">
        <a class="item-control item-create" title="Add Power" data-type="power"><i class="fas fa-plus"></i> Add power</a>
        </div>
    </li>
    {{#each power as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
            <div class="item-image">
            <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
            </div>
            <h4>{{item.name}}</h4>
        </div>
        <div class="item-action item-prop">{{item.system.power_cost.action}}</div>
        <div class="item-rank item-prop">{{item.system.power_cost.active_rank}}</div>
        <div class="item-cost item-prop">{{item.system.power_cost.final_cost}}</div>
        <div class="item-active item-prop">{{item.system.power_cost.active}}</div>
        <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
        </li>
    {{/each}}
</ol>
</section>