<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">Name</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Add Power" data-type="advantage"><i class="fas fa-plus"></i> Add power</a>
    </div>
  </li>
  {{#each advantage as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <label class="item-base item-prop">{{item.labels.basepower}}</label>
      {{#if item.ranked}}
       <input class="cost-value rank" type="number" name="item.ranks" value="{{system.ranks}}" min="1" max="{{max_ranks}}" data-dtype="Number"/>
      {{/if}}
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
      </div>
    </li>
  {{/each}}
</ol>